pragma once
#include <iostream>
#include <queue>
using namespace std;

class Appointment {
public:
    string patient;
    string doctor;

    Appointment(string p, string d) {
        patient = p;
        doctor = d;
    }
};

class AppointmentSystem {
public:
    queue<Appointment> q;

    void addAppointment(string p, string d) {
        q.push(Appointment(p, d));
        cout << "Appointment Added Successfully!\n";
    }

    void processAppointment() {
        if (q.empty()) {
            cout << "No Appointments.\n";
            return;
        }
        Appointment a = q.front();
        q.pop();
        cout << "Processing Appointment: " 
             << a.patient << " with Dr. " << a.doctor << endl;
    }

    void showAppointments() {
    queue<Appointment> temp = q;
    while (!temp.empty()) {
        Appointment a = temp.front();
        cout << a.patient << " -> " << a.doctor << endl;   // ? Correct
        temp.pop();
    }
}

    }
};


